{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "version": "1.0.0",
  "id": "d3584887-d29c-4bfa-a14c-5066ae7c010a",
  "packageName": "com.microsoft.teams.apptemplates.workplaceawards",
  "developer": {
    "name": "<<Developer name>>",
    "websiteUrl": "<website url>",
    "privacyUrl": "<privacy url>",
    "termsOfUseUrl": "<terms of use url>"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Workplace Awards"
  },
  "description": {
    "short": "Workplace Awardsは、簡単かつ直感的に操作できる従業員に対する表彰システムを提供します。",
    "full": "Workplace Awardsは、月ごとや四半期ごとの報奨や表彰を簡単に行えるシステムを提供します。指定したアワードにチームメンバーを推薦することで彼らの仕事を評価し、いつでもどこからでもチームの成功を祝うことができます。"
  },
  "accentColor": "#00B764",
  "bots": [
    {
      "botId": "<<botId>>",
      "scopes": [
        "team"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "<appbaseurl>/config-tab",
      "canUpdateConfiguration": true,
      "scopes": [
        "team"
      ]
    }
  ],
  "composeExtensions": [
    {
      "botId": "<<botId>>",
      "canUpdateConfiguration": false,
      "commands": [
        {
          "id": "Nominate",
          "title": "ノミネーション",
          "description": "ノミネーションを検索",
          "parameters": [
            {
              "name": "searchText",
              "title": "検索",
              "description": "検索"
            }
          ],
          "context": [
            "compose"
          ],
          "initialRun": true
        },
        {
          "id": "Nominate awards",
          "type": "action",
          "title": "ノミネートする",
          "description": "チームメンバーをアワードにノミネートする",
          "initialRun": true,
          "fetchTask": true,
          "context": [
            "compose"
          ]
        }
      ]
    }
  ],
  "validDomains": [
    "<<appDomain>>"
  ],
  "webApplicationInfo": {
    "id": "<<botId>>",
    "resource": "api://<<applicationurl>>/<<botId>>"
  }
}
